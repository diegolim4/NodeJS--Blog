<h2>Minhas Postagens: </h2>

{{#each postagens}}    
    <div class="card mt-2">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagens/{{slug}}"><button class="btn btn-success">Leia Mais</button></a>
            <hr>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Data de Publicação: {{data}}</small>
        </div>
    </div>

{{else}}
    <h2>Nenhuma Postagem</h2> 
{{/each}}