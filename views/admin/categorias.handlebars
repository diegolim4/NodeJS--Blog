<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
<div class="card mt-2">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>{{slug}}</small>
        <table> 
            <tr>
                <td>
                    <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>
                </td>
                <td>
                    <form action="/admin/categorias/deletar/" method="POST">
                        <input type="hidden" name="id" value="{{_id}}">
                        <button type="submit" class="btn btn-danger mt-3">Deletar</button>
                    </form>
                </td>   
            </tr>        
        </table>
    </div>
</div>

{{else}}
    <h4 class="mt-3">Nenhuma Categoria Registrada</h4>

{{/each}}