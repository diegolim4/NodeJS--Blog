{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagens/edit" method="POST">

            <input type="hidden" value="{{postagens._id}}" name="id">

            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control mt-2" value="{{postagens.titulo}}">

            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control mt-2" value="{{postagens.slug}}">

            <label for="descricao">Descricão: </label>
            <input type="text" name="descricao" class="form-control mt-2" value="{{postagens.descricao}}">

            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control mt-2">{{postagens.conteudo}}</textarea>

            <label for="categoria">Categorias: </label>
            <select name="categoria" class="form-select mt-2">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-2" type="submit">Confirmar edição</button>
        </form>
    </div>
</div>